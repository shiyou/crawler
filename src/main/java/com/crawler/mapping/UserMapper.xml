<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.crawler.mapping">
	<resultMap type="com.crawler.po.UserPo" id="userPo">
		<id column="id_" property="id"/>
		<result column="name_" property="name"/>
		<result column="password_" property="password"/>
	</resultMap>

	<select id="getUser" resultType="com.crawler.po.UserPo">
		select id_ id,name_ name,password_ password from user_
	</select>
	
	<select id="getUserById" parameterType="String" resultMap="userPo">
		select * from user_ where id_= #{id}
	</select>
	
	<insert id="insert">
	    insert into user_ (id_, name_, password_) values (#{id}, #{name}, #{password})
	</insert>
	

</mapper>